{
  "name": "driving-school-server",
  "version": "1.0.0",
  "description": "Backend API для сайта школы вождения",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "start:prod": "NODE_ENV=production node src/server.js",
    "pm2:start": "NODE_ENV=production pm2 start src/server.js --name rulplus-app",
    "pm2:stop": "pm2 stop rulplus-app",
    "pm2:restart": "pm2 restart rulplus-app",
    "pm2:delete": "pm2 delete rulplus-app",
    "pm2:logs": "pm2 logs rulplus-app",
    "pm2:monit": "pm2 monit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"src/**/*.{js,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,json}\"",
    "setup": "node setup.js",
    "create-env": "node create-env.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio"
  },
  "keywords": [
    "driving-school",
    "api",
    "nodejs",
    "express",
    "postgresql",
    "prisma",
    "typescript"
  ],
  "author": "Development Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.4",
    "prisma": "^6.15.0",
    "sharp": "^0.32.5",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "eslint": "^8.45.0",
    "jest": "^29.6.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
